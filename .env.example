# Environment Configuration
# Copy this file to .env and fill in your values

# Environment
ENV=test

# Browser Configuration
BROWSER=chromium
HEADLESS=true
BASE_URL=https://test.example.com

# Jira Configuration
JIRA_SERVER=https://your-domain.atlassian.net
JIRA_EMAIL=your-email@example.com
JIRA_TOKEN=your_jira_api_token_here

# Zephyr Scale Configuration
ZEPHYR_TOKEN=your_zephyr_api_token_here

# Database Configuration
DB_PASSWORD=your_database_password
DB_CONNECTION_STRING=mssql+pyodbc://user:password@server/database?driver=ODBC+Driver+17+for+SQL+Server

# Email Configuration
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=automation@example.com
SMTP_PASSWORD=your_smtp_password

# OCR Configuration (optional)
TESSERACT_CMD=/usr/bin/tesseract